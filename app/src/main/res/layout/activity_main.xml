<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <ImageView
            android:src="@drawable/ground_level1"
            android:layout_width="1028dp"
            android:layout_height="234dp" android:id="@+id/GroudImg"
            tools:layout_editor_absoluteX="-149dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginTop="68dp"/>
    <ImageView
            android:src="@drawable/player"
            android:layout_width="0dp"
            android:layout_height="78dp" android:id="@+id/PlayerImg"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/Links_Btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp" android:layout_marginEnd="522dp"/>
    <ImageView
            android:src="@drawable/flag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/PlayerImg"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="2dp"
    />
    <Button
            android:text="Links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Links_Btn"
            android:background="#FFFFFF" android:textColorLink="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/Rechts_Btn" android:layout_marginStart="16dp"
    />
    <Button
            android:text="Rechts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Rechts_Btn"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/Links_Btn" android:layout_marginBottom="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>